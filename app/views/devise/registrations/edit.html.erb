<%= page_header do %>
  <h2>Edit My Profile</h2>
<% end %>

<div class="row">
  <div class="col-md-6">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>About Me</legend>
    <div class="form-gorup">
    <%= f.input :first_name, input_html: {class: 'form-control input-lg'} %>
    <%= f.input :last_name, input_html: {class: 'form-control input-lg'} %>
    <%= f.input :email, input_html: {class: 'form-control input-lg'} %>
    </div>
  </fieldset>

  <br>
  <fieldset>
    <legend>Profile Picture</legend>
    <%= f.input :avatar, as: :file %>
    <% if f.object.avatar? %>
    <div class="control-group">
      <label class="control-label">Current avatar</label>
      <div class="controls">
        <%= image_tag f.object.avatar.url %>
      </div>
    </div>

    <% end %>
  </fieldset>

  <br>
  <fieldset>
    <legend>Update Password</legend>
    <div class="form-gorup">
    <%= f.input :password,hint: "Leave blank if you don't want to change it", input_html: {class: 'form-control input-lg', autocomplete: 'off'} %>
    <%= f.input :password_confirmation, input_html: {class: 'form-control input-lg', autocomplete: 'off'} %>
    </div>
  </fieldset>

  <fieldset>
    <legend>Comfirm Changes</legend>
    <%= f.input :current_password, hint: "We need your current password to confirm your changes", input_html: {class: 'form-control input-lg', autocomplete: 'off'} %>
  </fieldset>

 <div class="form-actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
    <%= link_to "Back", root_path, class: 'btn' %>
    <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn btn-danger pull-right' %>
  </div>


<% end %>
  </div>
</div>
