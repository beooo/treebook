<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
  <div class="navbar-header">
    <div class="container">
      <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <li><%= link_to "Treebook", activities_path, class: 'brand' %></li>
      <% else %>
        <li><%= link_to "Treebook", root_path, class: 'brand' %></li>
      <% end %>
        <li><%= link_to "All Statuses", feed_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Activity Feed", activities_path %> </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to 'Albums', albums_path(current_user)%></li>
          <li><%= link_to "Friends", user_friendships_path %></li>
          <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
          <li><%= link_to "Log out", logout_path  %></li>
        <% else %>
          <li><%= link_to "Register", register_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
  <div class="container">
    <%= render_breadcrumbs %>
    <% flash.each do |type, message| %>
      <div class="alert <%= flash_class(type) %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>

      <%= yield %>
  </div>

</body>
</html>
